# Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Example for Neon PostgreSQL:
# DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-2.aws.neon.tech/neondb?sslmode=require&pgbouncer=true

# Authentication
BETTER_AUTH_SECRET=your-secret-here-minimum-32-characters-cryptographically-random

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Debug Mode
DEBUG=False

# Logging Configuration
LOG_LEVEL=info

# Groq Configuration (for AI Chat Agent)
GROQ_API_KEY=gsk_your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile
CHAT_CONTEXT_MESSAGES=50
